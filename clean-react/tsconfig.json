{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "esnext", 
      "dom", 
      "dom.iterable"
    ],
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "src",
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,   
    "resolveJsonModule": true,
    
    "noEmit": false,
  },
  "include": [
    "src/**/*"
  ]

}